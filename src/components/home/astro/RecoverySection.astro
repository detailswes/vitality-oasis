---
import { recoverySectionData } from "@/data/recoverySectionData";
import { Image } from "astro:assets";
import HomeScreenForm from "@/components/home/react/HomeScreenForm";
const { recoveryImage, callMessageAction } = Astro.props;
---

<section
  class="my-16 md:my-[95px] flex justify-center items-start gap-[43px] flex-col md:flex-row px-4"
>
  <div class="w-full max-w-[455px]">
    <Image src={recoveryImage} alt="start-recover" class="w-full" />
    <div
      class="mt-2 bg-[#F7F7FB] flex flex-col sm:flex-row items-start p-[30px] gap-[18px]"
    >
      <div class="bg-secondary p-3 rounded-sm">
        <Image src={callMessageAction} alt="call-msg" />
      </div>
      <div>
        <h6 class="text-lg md:text-xl font-medium text-secondary">
          {recoverySectionData.callMessageTitle}
        </h6>
        <h6 class="text-2xl md:text-4xl text-text font-bold">
          {recoverySectionData.phoneNumber}
        </h6>
        <p class="text-text">
          {recoverySectionData.callMessageDescription}
        </p>
      </div>
    </div>
  </div>

  <div class="w-full max-w-[595px]">
    <h2 class="text-text text-4xl md:text-[56px] font-medium font-Bodonitown">
      {recoverySectionData.title}
    </h2>
    <p class="text-text mt-5">{recoverySectionData.description}</p>
    <HomeScreenForm client:load />
  </div>
</section>
