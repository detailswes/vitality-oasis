---
import { recoverySectionData } from "@/data/recoverySectionData";
import { Image } from "astro:assets";
import HomeScreenForm from "@/components/home/react/HomeScreenForm";
const { recoveryImage, callMessageAction } = Astro.props;
---

<section
  class="py-16 bg-[#FDF7F3] md:py-[90px] flex justify-center items-start gap-[43px] flex-col md:flex-row px-4"
>
  <div class="w-full max-w-[455px]">
    <Image src={recoveryImage} alt="start-recover" class="w-full" />
    <div
      class="mt-2 bg-primary text-white flex flex-col sm:flex-row items-start p-[30px] gap-[18px]"
    >
      <Image src={callMessageAction} alt="call-msg" />
      <div>
        <h6 class="text-lg md:text-xl font-medium">
          {recoverySectionData.callMessageTitle}
        </h6>
        <h6 class="text-2xl md:text-4xl font-bold">
          {recoverySectionData.phoneNumber}
        </h6>
        <p class="leading-[23px]">
          {recoverySectionData.callMessageDescription}
        </p>
      </div>
    </div>
  </div>

  <div class="w-full max-w-[595px]">
    <h2
      class="text-5xl font-normal font-Frank leading-[58px] text-transparent bg-text-gradient bg-clip-text"
    >
      {recoverySectionData.title}
    </h2>
    <p class="text-text text-lg font-normal">
      {recoverySectionData.description}
    </p>
    <HomeScreenForm client:load />
  </div>
</section>
