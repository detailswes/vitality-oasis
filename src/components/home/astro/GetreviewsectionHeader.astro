---
import scriptCertified from "@/assets/images/script.svg";
import carfCertified from "@/assets/images/carf.svg";
import googleImage from "@/assets/images/google.svg";
import starIcon from "@/assets/icons/star.svg";
import { Image } from "astro:assets";
---
<div
  class="flex gap-4 md:gap-10 px-6 md:px-[36px] py-5 rounded-[6px] mt-[14px] md:max-w-[454px]"
>
  <Image src={scriptCertified} alt="script-certified"  loading="eager" />
  <Image src={carfCertified} alt="carf-certified"  loading="eager" />
  <div class="flex items-center gap-[6px]">
    <Image src={googleImage} alt="google-reviews"  loading="eager"/>
    <div>
      <p class="font-bold text-black ">200+ Reviews</p>
      <div class="flex items-center gap-[5px]">
        <p class="text-[15px] font-bold text-black">4.9</p>
        {
          Array.from({ length: 5 }).map(() => (
            <Image src={starIcon} alt="rating-star"  loading="eager"/>
          ))
        }
      </div>
    </div>
  </div>
</div>
